class Solution {
    public int triangularSum(int[] nums) {
        int n = nums.length;
        int res = 0;
        int coeff = 1;

        for (int i = 0; i < n; i++) {
            res = (res + coeff * nums[i]) % 10;
            
            coeff = coeff * (n - 1 - i) / (i + 1);
        }

        return res;
    }
}
// Time Complexity: O(n)
// Space Complexity: O(1)
