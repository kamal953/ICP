class Solution {
    public int maximumWealth(int[][] accounts) {
       int n=accounts.length;
       int sum=0;
       
       for(int i=0;i<n;i++){
        int MaxSum=0;
        for(int j=0;j<accounts[0].length;j++){
               MaxSum+=accounts[i][j];
               
        }
        sum=Math.max(MaxSum,sum);
       } 
       return sum;
    }
}
// Time Complexity: O(m × n) — Each element in the matrix is visited once.
// Space Complexity: O(1) — Only a few integer variables are used; no extra space.
