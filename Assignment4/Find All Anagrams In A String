import java.util.*;

class Solution {
    public List<Integer> findAnagrams(String s, String p) {
        if(p.length() > s.length()){
            return new ArrayList<>();
        }
        int[] freq = new int[26];
        for(int i = 0; i < p.length(); i++){
            freq[p.charAt(i) - 'a']++;
        }
        
        int[] comp = new int[26];
        List<Integer> list = new ArrayList<>();
        for(int i = 0; i < p.length(); i++){
            comp[s.charAt(i) - 'a']++;
        }
        
        int left = 0;
        if(Arrays.equals(freq, comp)){
            list.add(left);
        }
        
        int right = p.length();
        while(right < s.length()){
            comp[s.charAt(right) - 'a']++;  
            comp[s.charAt(left) - 'a']--;  
            left++;                         
            right++;
            
            if(Arrays.equals(freq, comp)){
                list.add(left);
            }
        }
        
        return list;
    }
}
// Time Complexity: O(n)
// Where n = length of string s. Each character is processed once in the sliding window, and comparison of two fixed-size arrays (length 26) takes O(1) time.

// Space Complexity: O(1)
// The frequency arrays are of constant size (26 for lowercase English letters), so space usage is constant regardless of input size.
